{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "module": {
            "type": "string"
          }
        },
        "required": [
          "module"
        ]
      }
    }
  },
  "required": [
    "name",
    "version",
    "plugins"
  ]
}
